<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.authine.cloudpivot.ext.mapper.DepartmentMapper">
    <resultMap id="department" type="com.authine.cloudpivot.ext.entity.Department">
    </resultMap>

    <select id="getUserDepartment" parameterType="java.util.List" resultMap="department">
        select a.id, a.name, a.sourceId, b.formId
        from h_org_department a
        inner join (select id as formId, trim(BOTH '"' from concat(json_extract(dept, '$[0].id'))) as id
        from ii84q_dept_leader) b
        on a.id = b.id
        <where>
            <if test="ids != null and ids.size() > 0">
                a.sourceId in
                <foreach item="id" collection="ids" separator="," open="(" close=")">
                    #{id}
                </foreach>
            </if>
            <if test="ids == null or ids.size() == 0">
                1 = 2
            </if>
        </where>
    </select>
</mapper>
